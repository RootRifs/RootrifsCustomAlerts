{% sw_extends '@Storefront/storefront/component/buy-widget/buy-widget.html.twig' %}

{% block buy_widget %}
    {% if page.extensions.rootrifs_custom_alerts %}
        {% for alert in page.extensions.rootrifs_custom_alerts %}
            {% if alert.position == 'productdetail' %}
                {% sw_include '@Storefront/storefront/utilities/alert.html.twig' with {
                    type: alert.style,
                    icon: false,
                    heading:  alert.heading,
                    content: alert.message|raw
                } %}
            {% endif %}
        {% endfor %}
    {% endif %}

    {{ parent() }}
{% endblock %}